
SamplerState samp0 : register(s0);

Texture2D colorMap : register( t0 );


struct VS_OUTPUT
{
	float4 Position		: S_POSITION;
	float2 UV			: TEXCOORD0;
	float4 Colour		: COLOR;
};

float4 main(VS_OUTPUT In) : S_TARGET_OUTPUT
{
	float alpha = colorMap.Sample(samp0, In.UV.xy).a;

	if (alpha < 0.00001f)
		discard;

	return (In.Colour * float4(float3(1), alpha));
	//return colorMap.Sample(samp0, In.UV.xy);
}  
